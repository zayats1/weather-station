//INCLUDEFILE option("vscode")
{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "LaunchMain",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build-debug",
            "chip": "esp32c3",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true,
                "formatOptions": {
                    "binaryFormat": "idf"
                }
            },
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "target/riscv32imc-unknown-none-elf/debug/${workspaceFolderBasename}",
                    "rttEnabled": true,
                    "svdFile": "${workspaceFolder}/esp32c3.svd",
                    "rttChannelFormats": [
                        {
                            "channelNumber": 0,
                            "dataFormat": "Defmt",
                        }
                    ],
                }
            ],
        },
        {
            "type": "probe-rs-debug",
            "request": "attach",
            "name": "Attach",
            "cwd": "${workspaceFolder}",
            "chip": "esp32c3",
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "svdFile": "${workspaceFolder}/esp32c3.svd",
                    "programBinary": "target/riscv32imc-unknown-none-elf/debug/${workspaceFolderBasename}",
                    "rttEnabled": true,
                    "rttChannelFormats": [
                        {
                            "channelNumber": 0,
                            "dataFormat": "Defmt",
                        }
                    ],
                }
            ],
            "consoleLogLevel": "Debug",
        },
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "LaunchBin",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build-debug",
            "chip": "esp32c3",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true,
                "formatOptions": {
                    "binaryFormat": "idf"
                }
            },
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "target/riscv32imc-unknown-none-elf/debug/${fileBasenameNoExtension}",
                    "svdFile": "${workspaceFolder}/esp32c3.svd",
                    "rttEnabled": true,
                    "rttChannelFormats": [
                        {
                            "channelNumber": 0,
                            "dataFormat": "Defmt",
                        }
                    ],
                }
            ],
        },
        {
            "type": "probe-rs-debug",
            "request": "attach",
            "name": "AttachBin",
            "cwd": "${workspaceFolder}",
            "chip": "esp32c3",
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "target/riscv32imc-unknown-none-elf/debug/${fileBasenameNoExtension}",
                    "svdFile": "${workspaceFolder}/esp32c3.svd",
                    "rttEnabled": true,
                    "rttChannelFormats": [
                        {
                            "channelNumber": 0,
                            "dataFormat": "Defmt",
                        }
                    ],
                }
            ],
        }
    ]
}